<!-- createAccount.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include the head partial -->
    <%- include('../partials/head') %>
</head>

<body id="base">
    <!-- Include the navigation bar partial -->
    <%- include('../partials/nav') %>

    <main>
        <!-- Container for creating a new account -->
        <div class="create-account-container">
            <!-- Title for the create account section -->
            <h1>Create Account</h1>
            <!-- Form for creating a new account -->
            <form action="/createAccount" method="post" class="create-account-form" id="createAccountForm">
                <!-- Input field for new username -->
                <label for="username">New Username:</label>
                <input type="text" id="username" name="username" required>
            
                <!-- Input field for new password -->
                <label for="password">New Password:</label>
                <input type="text" id="password" name="password" required>
            
                <!-- Submit button for creating the account -->
                <input type="submit" value="Create Account">

                <!-- Link/button to redirect to the login page -->
                <p>Already have an account? <a href="/login">Login</a></p>
            </form>
            <!-- End of create account form -->
        </div>
    </main>

    <!-- Footer section -->
    <footer>
        <!-- Include the footer partial -->
        <%- include('../partials/footer') %>
    </footer>

    <!-- external login script -->
    <script src="/finalScript.js"></script>
</body>

</html>
